<% layout('layouts/boilerplate') %>

    <div class="container">
        <form action="/gallery/folder/edit/<%= folder._id %>?_method=PUT" method="POST" novalidate
            class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image"
                        accept="image/png, image/gif, image/jpeg" multiple>

                </div>
            </div>
            <div class="mb-3">
                <% if (folder.images) { %>
                    <div class="row">
                        <% folder.images.forEach((e, i)=> { %>
                            <% if (i % 3===0 && i !==0) { %>
                    </div>
                    <div class="row">
                        <% } %>
                            <div class="col-md-4">
                                <img src="<%= e.thumbnail %>" alt="<%= e.fileName %>" class="img-thumbnail">
                                <div class="form-check">
                                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                                        value="<%=e.fileName%>" class="form-check-input">
                                    <label for="image-<%=i%>" class="form-check-label">Delete?</label>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } %>
            </div>
            <button class="btn btn-primary">Submit</button>
            <br>
            <a href="/gallery/folder/<%= folder._id%>" class="my-3">Back</a>
        </form>
    </div>